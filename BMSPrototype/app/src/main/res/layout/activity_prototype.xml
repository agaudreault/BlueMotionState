<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="bms.bmsprototype.PrototypeActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tvConnectedDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/connectedDevice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvConnectedDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etxtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false" />

        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/sendMessage"
            android:enabled="false"
            android:onClick="btnSendMessageOnClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAvailableDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/availableDevices" />

        <ListView
            android:id="@+id/lvAvailableDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="6">

            <fragment android:name="bms.bmsprototype.fragment.StreamPlaybackFragment"
                android:id="@+id/viewer"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/playback_activity" />
            <fragment android:name="bms.bmsprototype.fragment.StreamSurfaceFragment"
                android:id="@+id/list"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/streamed_activity" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDebug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_weight="6" />

    </LinearLayout>

</LinearLayout>
